<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>nvn</artifactId>
        <groupId>net.sf.nvn</groupId>
        <version>0.0.3</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.nvn</groupId>
    <artifactId>nvn-commons</artifactId>
    <version>0.0.3</version>
    <name>nvn-commons</name>
    <description>A commons library for nvn.</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <configuration>
                    <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-msbuild35-objects</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>net.sf.nvn.commons.dotnet.v35.msbuild.xsd</packageName>
                            <schemaDirectory>${basedir}/src/main/schemas/dotnet/3.5/msbuild</schemaDirectory>
                            <schemaFiles>Microsoft.Build.xsd</schemaFiles>
                            <staleFile>${project.build.directory}/generated-sources/jaxb/.v35.staleFlag</staleFile>
                        </configuration>
                    </execution>
                    <!-- 
                    <execution>
                        <id>generate-msbuild40-objects</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>net.sf.nvn.commons.dotnet.v40.msbuild.xsd</packageName>
                            <schemaDirectory>${basedir}/src/main/schemas/dotnet/4.0/msbuild</schemaDirectory>
                            <schemaFiles>Microsoft.Build.xsd</schemaFiles>
                            <staleFile>${project.build.directory}/generated-sources/jaxb/.v40.staleFlag</staleFile>
                        </configuration>
                    </execution>
                     -->
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <classifier>jdk15</classifier>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-core</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
    </dependencies>
</project>